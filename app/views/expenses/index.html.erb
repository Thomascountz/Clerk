<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h1>Your Expenses</h1>
    <% if @expenses.empty? %>
      <h2>You have no recorded expenses.</h2>
      <p>Get started by <%= link_to "adding an expense.", new_expense_path %>.</p>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Amount</th>
          </tr>
        </thead>
        <% @expenses.each do |expense| %>
          <tbody>
            <tr class="<%= cycle('odd', 'even') %>">
              <!-- TODO: Should I test this link? -->
              <td><%= link_to "#{expense.title}", expense_path(expense) %></td>
              <td>
                <% if expense.description.empty? %>
                  <em>(No Description)</em>
                <% else %>
                  <%= expense.description %>
                <% end %>
              </td>
              <td><%= number_to_currency(expense.amount) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    <% end %>
  </div>
</div>